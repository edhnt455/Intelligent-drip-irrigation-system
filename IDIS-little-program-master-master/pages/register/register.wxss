/* pages/register/register.wxss */
page{ 
    height: 100%; 
   }

    /*登录图片*/
    .register-icon{
        flex: none;
    }
    .register-img{
         height: 430rpx;
         width: 450rpx;
    }
.container {
    height: 100%; 
    display: flex; 
    flex-direction: column; 
    padding: 0; 
    box-sizing: border-box; 
    background-color: #f2f2f2
   }   

   /*表单内容*/
   .register-from { 
    margin-top: 0px;
    flex: auto; 
    height:100%; 
   } 
     
   .inputView { 
    background-color: #fff; 
    line-height: 44px;
   } 
   /*输入框*/
   .nameImage, .keyImage { 
    margin-left: 22px; 
    width: 14px; 
    height: 14px
   } 
     
   .registerLab { 
    margin: 15px 15px 15px 10px; 
    color: #545454; 
    font-size: 14px
   } 
   .inputText { 
    flex: block; 
    float: right; 
    text-align: left; 
    margin-right: 22px; 
    margin-top: 11px; 
    color: #cccccc; 
    font-size: 14px
   } 
     
   .line { 
    width: 100%; 
    height: 1px; 
    background-color: #cccccc; 
    margin-top: 1px; 
   }

   .section{
    background-color: #fff; 
    line-height: 24px;
   }

   .section__title{
    display: flex;
    flex-direction: column;
    align-items: center; 
    color: #545454; 
    font-size: 14px
   }

   
   /*按钮*/
   .registerBtnView { 
    width: 100%; 
    height: auto; 
    background-color: #f2f2f2; 
    margin-top: 0px; 
    margin-bottom: 0px; 
    padding-bottom: 0px; 
   } 
     
  
    
   .registerBtn { 
    width: 100%; 
    margin-top: 35px; 
   }